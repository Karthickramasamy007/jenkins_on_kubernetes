pipeline {
    agent {
        kubernetes {
            yaml readYaml file: 'python-agent.yaml' // Reading the external YAML file
        }
    }
    stages {
        stage('Check Python Version') {
            steps {
                container('python') {
                    sh 'python --version'  // Check Python version inside the container
                }
            }
        }
    }
}
