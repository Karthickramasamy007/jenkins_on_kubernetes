pipeline {
    agent { label 'jenkins-slave' }  // This label matches the one configured in Kubernetes pod template
    stages {
        stage('Print Python Version') {
            steps {
                script {
                    // Running the command to print the Python version
                    sh 'python3 --version'
                }
            }
        }
    }
}
